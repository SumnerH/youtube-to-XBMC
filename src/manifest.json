{
  "manifest_version": 2,

  "name": "Kassi Share - Send to Kodi/XBMC",
  "description": "Send YouTube videos to Kodi/XBMC Media Center",
  "version": "3.4.1",
  "permissions": [ "http://*/*", "https://*/*", "storage", "tabs" ],

  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "assets/icon_19.png",
      "38": "assets/icon_38.png"
    },
    "default_title": "Kassi Share - Settings",
    "default_popup": "settings.html"
  },

  "background": {
    "scripts": ["js/enums.js", "js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/*", "https://www.youtube.com/*"],
      "css": ["css/iziToast.min.css", "css/inject.css"],
      "js": ["js/iziToast.min.js", "js/enums.js", "js/injectXBMC.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
  ],

  "options_page": "settings.html",

  "short_name": "Kassi Share"
}
