{
  "manifest_version": 2,

  "name": "Kassi Share - Send to Kodi",
  "description": "Send YouTube videos to Kodi/XBMC Media Center",
  "version": "4.0",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "tabs",
    "contextMenus"
  ],

  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "assets/icon_19.png",
      "38": "assets/icon_38.png"
    },
    "default_title": "Kassi Share - Settings",
    "default_popup": "settings.html"
  },

  "background": {
    "scripts": [
      "js/sprintf.js",
      "js/enums.js",
      "js/utils.js",
      "js/background/init.js",
      "js/background/sites/youtube.com.js",
      "js/background/sites/vimeo.com.js",
      "js/background/sites/err.ee.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://vimeo.com/*",

        "http://etv.err.ee/*",
        "https://etv.err.ee/*",

        "http://etv2.err.ee/*",
        "https://etv2.err.ee/*",

        "http://etvpluss.err.ee/*",
        "https://etvpluss.err.ee/*"
      ],
      "css": ["css/iziToast.css"],
      "js": ["js/iziToast.js", "js/enums.js", "js/inject.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
  ],

  "options_page": "settings.html",

  "short_name": "Kassi Share"
}
